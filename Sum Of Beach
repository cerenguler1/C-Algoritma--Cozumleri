using System;

namespace AlgorithmSolutions
{
    class SumOfBeach
    {
        static void Main(string[] args)
        {
            // Kullanıcıdan input alıyoruz
            Console.Write("Enter a text: ");
            string input = Console.ReadLine();
            
            // Aradığımız kelimeler
            string[] keywords = { "sand", "water", "fish", "sun" };
            
            // Büyük-küçük harf duyarlılığını kaldırmak için hepsini küçültüyoruz
            string lowerCaseInput = input.ToLower();
            
            int totalCount = 0;

            // Kelimeleri tek tek arıyoruz
            foreach (string keyword in keywords)
            {
                // Senin yazdığın mantık (substring kontrolü) burada çalışıyor
                for (int i = 0; i <= lowerCaseInput.Length - keyword.Length; i++)
                {
                    if (lowerCaseInput.Substring(i, keyword.Length) == keyword)
                    {
                        totalCount++;
                    }
                }
            }

            Console.WriteLine($"Total occurrences: {totalCount}");
            Console.ReadKey();
        }
    }
}
